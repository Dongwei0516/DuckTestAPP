<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/device_msg"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="16dp"
        android:orientation="vertical"
        android:lineSpacingExtra="5dp"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:background="@drawable/border"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgName"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/name"/>

            <TextView
                android:id="@+id/device_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="设备名: "
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAddress"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/address"/>

            <TextView
                android:id="@+id/device_address"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Mac 地址: "
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgRssi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/rssi"/>

            <TextView
                android:id="@+id/device_rssi"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="信号强度: "
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgToken"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/token"/>

            <TextView
                android:id="@+id/device_token"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Token: "
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCleargrass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/company"/>

            <TextView
                android:id="@+id/Cleargrass"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="公司: "
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgTem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/tem"/>

            <TextView
                android:id="@+id/tem"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="温度: "
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgHumi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/humi"/>

            <TextView
                android:id="@+id/humi"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="湿度: "
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgE"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/vol"/>

            <TextView
                android:id="@+id/electric"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="磁铁状态: "
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e3e3e3" />

    </LinearLayout>

    <ListView
        android:id="@+id/test_lv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/device_msg"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/border"
        android:visibility="gone">

    </ListView>


    <Button
        android:id="@+id/button2"
        android:layout_below="@id/test_lv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:text="开始段码屏测试"
        android:textColor="#FFFFFF"
        android:background="@drawable/yellowbtn" />

    <Button
        android:id="@+id/buttonDFU"
        android:layout_below="@id/test_lv"
        android:textColor="#FFFFFF"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="DFU升级"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:background="@drawable/redbtn" />

    <TextView
        android:id="@+id/bottom_msg_test"
        android:layout_width="match_parent"
        android:background="#4F94CD"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>